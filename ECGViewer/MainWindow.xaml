        mc:Ignorable="d"
              Title="EPJ-vindue: EKG" Height="864" Width="1536" Background="#FFE9F6FC" Loaded="Window_Loaded" Icon="App_logo.png" Closing="Window_Closing" WindowStartupLocation="CenterScreen" WindowState="Maximized">
