        <Button x:Name="logout_BT" Cursor="Hand" Margin="1164,674,0,0" Height="150" Width="300" FontSize="40" VerticalAlignment="Top" HorizontalAlignment="Left" Click="logout_BT_Click" ToolTip="Tryk for logud" BorderBrush="{x:Null}">
